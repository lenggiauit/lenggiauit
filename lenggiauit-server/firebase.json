{
  "functions": [
    {
      "source": "functions",
      "public": "public",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": "npm --prefix functions run build",
      "rewrites": [{
        "source": "/api",
        "function": "api"
      }]
    }
  ],
   
  "emulators": {
    "functions": {
      "port": 5001
    },
    "ui": {
      "enabled": true
    }, 
    "singleProjectMode": true
  }
}
